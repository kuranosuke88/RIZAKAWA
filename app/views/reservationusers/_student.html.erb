
<div class="modal fade" id="modal2" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title" id="label1" style="font-size:20px">情報修正(生徒名:<%= @student.student_name %>)</div>
      </div>
      <div class="modal-body">
        <%= form_with(model: @student, url: maneger_students_update_path, local: true) do |f| %>
          <%= f.hidden_field :id %>
          <%= hidden_field_tag :lesson_id, @lesson.id %>
          <label for="select1a">授業備考:</label>
          <%= text_field_tag :lesson_note, @lesson.note , class: "form-control"%>
          <label for="text1">生徒学校:</label>
          <%= f.text_field :school , class: "form-control" %>
          <label for="select1a">生徒授業方法:</label>
          <% if @student.zoom? %>　
            <% regular="ZOOM" %>
          <% else %>
            <% regular="リアル" %>
          <% end %>
          <%= f.select :regularkanji, [["ZOOM"],["リアル"]], {selected:regular}, required: true, class: "form-control" %>
          <label for="text2">生徒基本固定曜日1:</label>
          <%= f.text_field :fix_day , class: "form-control" %>
          <label for="text2">生徒基本固定時間1:</label>
          <%= f.time_field :fix_time , class: "form-control" %>
          <label for="text2">生徒基本固定曜日2:</label>
          <%= f.text_field :fix_day2 , class: "form-control" %>
          <label for="text3">生徒基本固定時間2:</label>
          <%= f.time_field :fix_time2 , class: "form-control" %>
          <label for="text4">生徒基本固定曜日3:</label>
          <%= f.text_field :fix_day3 , class: "form-control" %>
          <label for="text5">生徒基本固定時間3:</label>
          <%= f.time_field :fix_time3 , class: "form-control" %>
          <label for="select1a">生徒備考:</label>
          <%= f.text_area :student_note, class: "form-control" , size: "20x3"%>
      </div>
      <div class="modal-footer">
        <%= f.submit "登録", class: "btn btn-primary" %>
        <% end %>&nbsp;
        <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>


















