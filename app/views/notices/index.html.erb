<% provide(:title, 'お知らせ一覧') %>

<h1>お知らせ一覧</h1>

<table class="table-bordered table-condensed" id="notices-info">
  <thead>
    <tr>
      <th colspan="1" class="col-md-3">送信日</th>
      <th colspan="5">内容</th>
    </tr>
  </thead>
  <thead>
  <% @notices.each do |notice| %>
    <tr>
      <th colspan="1" class="col-md-3"><%= notice.updated_at %></td>
      <th colspan="5"><%= notice.notice_content %></td>
    </tr>
  <% end %>
  </thead>
</table>